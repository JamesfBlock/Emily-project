<%= link_to(product) do %>
  <div class="card">
    <div class="product-image" style="background-image: url('<%= product.image_url %>');">
      <div class="price">
        <p>Â£<%= product.price %></p>
      </div>
    </div>
    <div class="product-title">
      <div class="name">
        <h2><%= product.name[0..25]%>...</h2>
      </div>
    </div>
    <div class="product-company">
      <p>by <%= product.company.name %></p>
    </div>
    <% end %>
    <div class="product-actions">
      <div class="likers">
        <%= link_to like_path(product), method: :post, remote: true do %>
          <% if liked(product) %>
            <i class="fa fa-heart"></i>
          <% else %>
            <i class="fa fa-heart-o"></i>
          <% end %>
        <% end %>
      </div>
      <div class="like">
    </div>
  </div>
</div>

<%= link_to(product) do %>
  <div class="card">
    <div class="product-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= product.image_url %>');">
      <div class="price">
        <p>Â£<%= product.price %></p>
      </div>
    </div>
    <div class="product-title">
      <div class="name">
        <h2><%= product.name[0..25]%>...</h2>
      </div>
    </div>
    <div class="product-company">
      <p>by <%= product.company %></p>
    </div>
    <% end %>
    <div class="product-actions">
      <div class="likers">
        <div class="row">
          <% product.users.each do |user| %>
            <div class="col-xs-1 shift-profile-img ">
              <div class="user-icons">
                <% if user.profile_picture.nil? %>
                <% else %>
                  <%= cl_image_tag user.profile_picture.path %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="like">
        <% if product.likes.where(user_id: current_user, product_id: product).count == 1 %>
          <%= link_to(product_likes_path(product), method: :post) do %><i class="fa fa-heart"></i><% end %>
        <% elsif if product.likes.where(user_id: current_user, product_id: product).count == 0  %>
          <%= link_to(product_likes_path(product), method: :post) do %><i class="fa fa-heart-o"></i><% end %>
        <% else %>
          <p>Login</p>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>

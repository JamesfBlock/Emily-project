<div class="banner flex-box" style="background-image: linear-gradient(90deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.5 ) 80%), url('<%= cl_image_path (@company.company_cover.path) %>')">
  <div class="flex-item">
    <div class="logo" style="background-image: url('<%= cl_image_path (@company.company_profile.path) %>')">
    </div>
    <div class="col-xs-12 col-md-8 col-md-offset-2 setting">
      <h1><%= @company.name %></h1>
      <p><%= @company.description %></p>
      <p><%= @company.url %></p>
    </div>
  </div>
</div>
<div class="container">
  <p class="padding-top"><%= @company.name %> products</p>
  <div class="row">
    <% if @company.products.count > 0 %>
      <% @company.products.each do |product| %>
        <div class="col-lg-4 col-sm-6 col-xs-12">
          <%= render 'products/card', product: product %>
        </div>
        <% end %>
      <% else %>
      <p class="text-center">No products</p>
      <% end %>
    </div>

</div>
